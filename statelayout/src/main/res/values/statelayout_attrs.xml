<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="slStateLayout">
        <!-- Indicate the initial state of the Layout -->
        <attr name="slInitState" format="enum">
                <enum name="contentState" value="0"/>
                <enum name="emptyState" value="1"/>
                <enum name="errorState" value="2"/>
                <enum name="loadingState" value="3"/>
        </attr>

        <!-- (On children of StateLayout) indicate the type of state this view is associated -->
        <attr name="slState" format="enum">
            <enum name="contentState" value="0"/>
            <enum name="emptyState" value="1"/>
            <enum name="errorState" value="2"/>
            <enum name="loadingState" value="3"/>
        </attr>
    </declare-styleable>
</resources>